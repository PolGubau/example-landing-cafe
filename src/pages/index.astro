---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import HeroHeader from "../components/HeroHeader.astro";
import HeroImage from "../components/HeroImage.astro";
import Intro from "../components/Intro.astro";
import Specialties from "../components/Specialties.astro";
import Philosophy from "../components/Philosophy.astro";
import Events from "../components/Events.astro";
import Origins from "../components/Origins.astro";
import Subscriptions from "../components/Subscriptions.astro";
import ShippingFAQ from "../components/ShippingFAQ.astro";
import { Image } from "astro:assets";
---

<Layout>
	<main>
		<section class="pt-36">
			<div
				class="w-full max-w-7xl mx-auto px-4 lg:px-0 flex flex-col items-center gap-10 relative"
			>
				<HeroHeader />

				<HeroImage alt="Location icon" />

				<Intro />

				<div class="flex justify-center items-center h-[200px] relative">
					<div class="h-full bg-black/20 w-px absolute"></div>
					<Image
						src="/images/star.svg"
						alt="Star"
						class="w-12 h-12 text-black/20 rounded-lg"
						width={48}
						height={48}
					/>
				</div>

				<!-- CTA: tienda -->
				<section class="w-full max-w-4xl mx-auto px-4 lg:px-0 text-center my-8">
					<p class="uppercase text-sm">Compra online</p>
					<h2 class="text-2xl md:text-5xl xl:text-7xl font-bold mt-2">
						Lleva nuestro café a casa
					</h2>
					<p class="mt-3 xl:text-xl">
						Envíos rápidos y suscripción mensual disponible.
					</p>
				</section>

				<Specialties />

				<Origins />

				<Subscriptions />

				<div class="flex justify-center items-center h-[200px] relative">
					<div class="h-full bg-black/20 w-px absolute"></div>
					<Image
						src="/images/star.svg"
						alt="Star"
						class="w-12 h-12 text-black/20 rounded-lg"
						width={48}
						height={48}
					/>
				</div>

				<ShippingFAQ />

				<div class="flex justify-center items-center relative">
					<Image
						src="/images/arc.svg"
						alt="Star"
						class="w-full text-black rounded-lg"
						width={500}
						height={48}
					/>
				</div>

				<Philosophy />

				<Events />
			</div>
		</section>
	</main>
</Layout>
