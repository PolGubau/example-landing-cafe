---
import copy from "../data/copy";
---

<footer class="bg-appText py-10 md:py-12">
  <div class="container">
    <div class="md:grid md:grid-cols-[auto,1fr]">
      <div
        class="content text-sm leading-[1.3] uppercase tracking-[-0.41px] text-appGray-500 text-center mb-8 md:text-base md:leading-[1.3] md:text-left"
      >
        <div class="content-primitive content--paragraph">
          <p>
            {
              copy.footer.addressLines.map((line: string, index: number) => (
                <>
                  {line}
                  {index < copy.footer.addressLines.length - 1 ? <br /> : null}
                </>
              ))
            }
          </p>
        </div>
      </div>
      <nav
        class="grid grid-cols-[repeat(2,auto)] justify-between gap-x-12 gap-y-8 mx-auto mb-10 max-md:max-w-[225px] md:mb-20 lg:grid-cols-[repeat(4,auto)] lg:gap-20 xl:gap-32"
      >
        <div class="content footer--nav-col">
          <div class="content-primitive content--paragraph">
            <p>{copy.footer.connectTitle}</p>
          </div>
          <div class="content-primitive content--bulletList">
            <ul>
              <li><p>Instagram</p></li>
              <li><p>Facebook</p></li>
              <li><p>Twitter</p></li>
            </ul>
          </div>
        </div>
        <div class="content footer--nav-col">
          <div class="content-primitive content--paragraph">
            <p>{copy.footer.contactTitle}</p>
          </div>
          <div class="content-primitive content--bulletList">
            <ul>
              {
                copy.footer.contactItems.map((it: any) => (
                  <li>
                    <p>{it}</p>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="content footer--nav-col">
          <div class="content-primitive content--paragraph">
            <p>{copy.footer.shopTitle}</p>
          </div>
          <div class="content-primitive content--bulletList">
            <ul>
              {
                copy.footer.shopItems.map((it: any) => (
                  <li>
                    <p>{it}</p>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="content footer--nav-col">
          <div class="content-primitive content--paragraph">
            <p>{copy.footer.legalTitle}</p>
          </div>
          <div class="content-primitive content--bulletList">
            <ul>
              {
                copy.footer.legalItems.map((it: any) => (
                  <li>
                    <p>{it}</p>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div
      class="flex flex-col items-center text-center md:flex-row md:justify-between"
    >
      <div class="flex items-center max-md:mb-[14px]">
        <span
          class="text-sm leading-none tracking-[-0.41px] text-appBody mr-2 md:text-base md:leading-none md:mr-3"
          >{copy.footer.brand}</span
        >
      </div>
      <div
        class="text-xs leading-none text-appGray-500 md:text-base md:leading-none md:text-appBody"
      >
        {copy.footer.copyright}
      </div>
    </div>
  </div>
</footer>
