---
import copy from "../data/copy";
---

<section class="w-full max-w-7xl mx-auto px-4 lg:px-0 my-12">
  <h2 class="text-4xl font-bold text-center mb-8">{copy.eventsTitle}</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      copy.events.map((e) => (
        <article class="p-6 bg-white rounded-lg shadow-sm">
          <div class="text-sm text-appGray-500 uppercase">{e.date}</div>
          <h3 class="mt-2 text-xl font-semibold">{e.title}</h3>
          <p class="mt-2 text-sm text-appGray-500">{e.description}</p>
        </article>
      ))
    }
  </div>
</section>
