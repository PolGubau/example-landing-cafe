---
import specialties from "../data/specialties";
import copy from "../data/copy";

const sub = specialties.find((s) => s.sku === "SUB-001"); // Suscripci√≥n
---

<section class="w-full max-w-7xl mx-auto px-4 lg:px-0 my-12">
  <h2 class="text-4xl text-center font-bold mb-4">
    {copy.subscriptions.title}
  </h2>
  <p class="text-center mb-6">{copy.subscriptions.desc}</p>
  {
    sub ? (
      <div class="bg-white rounded-lg shadow-sm p-6 flex flex-col sm:flex-row items-center gap-6">
        <img
          src={sub.src}
          alt={sub.alt}
          class="w-48 h-32 object-cover rounded"
        />
        <div class="flex-1 text-left">
          <h3 class="text-xl font-semibold">{sub.title}</h3>
          <p class="text-sm text-appGray-500 mt-2">{sub.description}</p>
        </div>
        <div class="text-center">
          <div class="text-lg font-bold">{sub.priceLabel}</div>
          <button class="mt-3 inline-block bg-appText text-white px-4 py-2 rounded">
            {copy.subscriptions.subscribeButton}
          </button>
        </div>
      </div>
    ) : (
      <p class="text-appGray-500">{copy.subscriptions.noSubText}</p>
    )
  }
</section>
